# Database Configuration
POSTGRES_USER=neuro
POSTGRES_PASSWORD=neuro
POSTGRES_DB=neuroviz
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_me_in_production
JWT_EXPIRATION=86400

# Service URLs (for Docker)
BACKEND_URL=http://backend:8080
PROCESSING_URL=http://processing:8001
FRONTEND_URL=http://frontend:5173

# External URLs (for browser)
BACKEND_EXTERNAL_URL=http://localhost/api
PROCESSING_EXTERNAL_URL=http://localhost/py
FRONTEND_EXTERNAL_URL=http://localhost

# File Storage
STORAGE_PATH=/app/storage
RAW_DATA_PATH=/app/storage/raw
PROCESSED_DATA_PATH=/app/storage/processed

# Stream Simulator Configuration
SIM_SR=250
SIM_WS_URL=ws://localhost/ws/stream
SIM_SPEED_MULTIPLIER=1.0

# Development Settings
NODE_ENV=development
SPRING_PROFILES_ACTIVE=dev
PYTHONPATH=/app

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
